{% extends 'base.html.jinja' %}

{% block title %} Create Photographer {% endblock %}
{%set active_page = 'create_photographer'%}
{% block content %}

{% if error %}
<div class="error">
{{ error }}
</div>
{% endif %}
<div class="positionForm">
    <div class="main-block">
        <form method="post">
            <h1 id="contactHead">  Add a photographer account: </h1>
            <br>
            <label style="float:left; padding-left:20px" for="name">Name:&nbsp;</label>
            <input style="width:29%" size="20" maxlength="20" type="text" name="name" id="name" required>
            <span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span>
            <label style="float:center; padding-left:10px" for="password">Password:&nbsp;&nbsp;&nbsp;&nbsp;</label>
            <input style="width:29%" size="20" maxlength="20" type="password" name="password" id="password" required>
            <br>
            <br>
            <label style="float:left; padding-left:20px; padding-right:91px" for="email">Email: </label>
            <input style="width:72%; float:left" type="email" name="email" id="email" required><span>&nbsp;</span>
            <br>
            <br>
            <label style="float:left; padding-left:20px" for="phone_number">Phone Number: &nbsp;&nbsp;&nbsp;&nbsp;</label>
            <input style="width:72%; float: left" size="20" maxlength="20" type="text" name="phone_number" id="phone_number" required>
            <br>
            <br>
            <label style="float:left; padding-left:20px" for="text">About: &nbsp;&nbsp;&nbsp;&nbsp;</label>
            <textarea style="float:left; margin-top:10px" name="about" rows="5" cols="5" id="about" required></textarea>
            <div class="subButtonPos">
                <input class = "subButton" type="submit" value="register"></input>
            </div>
        </form>
        <a href="{{ url_for('core.login') }}">Already have an account? Login here!</a>
    </div>
</div>    
{% endblock %}