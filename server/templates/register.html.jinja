{% extends 'base.html.jinja' %}

{% block title %} register {% endblock %}
{%set active_page = 'register'%}
{% block content %}

{% if error %}
<div class="error">
{{ error }}
</div>
{% endif %}
<div class="positionForm">
    <div class="main-block">
        <form method="post">
            <h1 id="contactHead">  Sign up!  </h1>
            <br>
            <label style="float:left; padding-left:20px" for="name">Name:&nbsp;</label>
            <input style="width:29%" size="20" maxlength="20" type="text" name="name" id="name" required>
            <span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span>
            <label style="float:center; padding-left:10px" for="password">Password:&nbsp;&nbsp;&nbsp;&nbsp;</label>
            <input style="width:29%" size="20" maxlength="20" type="password" name="password" id="password" required>
            <br>
            <br>
            <label style="float:left; padding-left:20px" for="email">Email: </label>
            <input style="width:79%; float: right"  size="20" maxlength="20"  type="email" name="email" id="email" required><span>&nbsp;</span>
            <br>
            <br>
            <label style="float:left; padding-left:20px" for="phone_number">Phone Number: &nbsp;&nbsp;&nbsp;&nbsp;</label>
            <input style="width:79%; float: right" size="20" maxlength="20" type="text" name="phone_number" id="phone_number" required>
            <br>
            <br>
            <div class="subButtonPos">
                <input class = "subButton" type="submit" value="Register"></input>
            </div>
        </form>
        <a href="{{ url_for('core.login') }}">Already have an account? Login here!</a>
    </div>
</div>    
{% endblock %}