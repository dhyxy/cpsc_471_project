{% extends "base.html.jinja" %}

{# this template is only for photographers atm #}
{% block title %}profile{% endblock %}
{%set active_page = 'profile'%}
{% block content %}
<div class="profile-intro">
    <h1>My Profile</h1>
    <h2>Hey {{ user.name }}!</h2>
</div>

<div class="available-times-container">
<p>Your Available Times:</p>
{% for available_time in available_times %}
    <div class="available-time">
        <input type="datetime-local" style="width:15%" name="start" id="start" value="{{ available_time.start_time }}" disabled> - <input type="datetime-local" style="width:15%" name="end" id="end" value="{{ available_time.end_time }}" disabled>
        <form action="{{ url_for('core.delete_available_time', id=available_time.id) }}" method="post">
            <input style="width:15%" type="submit" value="X">
        </form>
        </div>
{% endfor %}
</div>
<br>
<br>
<div class="add-available-time-container">
<p style="padding-top:20px" >Add New Available Time</p>
<form method="post">
    <label for="start">start</label>
    <input type="datetime-local" name="start" id="start" required>
    <label for="end">end</label>
    <input type="datetime-local" name="end" id="end" required>
    <input type="submit" value="add new available timing">
</form>
</div>

<div class="contact-forms">
    {% for contact_form in contact_forms %}
    <div class="contact-form">
        <p>sender: {{contact_form.client_name}}</p>
        <p>from: {{ contact_form.client_email }}</p>
        <p>message: {{ contact_form.message }}</p>
    </div>
    {% endfor %}
</div>
{% endblock content %}